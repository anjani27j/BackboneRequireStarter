<div class="row">
  <div class="col-xs-12 col-sm-12">
    <button class="btn btn-default">New Request</button>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-12" style="padding-top:10px">
    <h3><span class="label label-info">Request Summary</span></h3>
  </div>
</div>
<div class="row">
  <div class="col-xs-8 col-sm-6">
    <label>Service</label>
  </div>
  <div class="col-xs-4 col-sm-6">
    <label>{{serviceName}}</label>
  </div>
</div>
<hr width="100%" style="margin-top:5px;margin-bottom:5px;"\>
<div class="row">
  <div class="col-xs-8 col-sm-6">
    <label>Passengers</label>
  </div>
  <div class="col-xs-4 col-sm-6">
    <label>{{numOfPassenger}}</label>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-12">
    <h3><span class="label label-info">Trip Information</span></h3>
  </div>
</div>
<div class="row">
  <div class="col-xs-8 col-sm-6">
    <label>Pickup time</label>
  </div>
  <div class="col-xs-4 col-sm-6">
    <label>{{pickupDate}}</label>
  </div>
</div>
<hr width="100%" style="margin-top:5px;margin-bottom:5px;"\>
<div class="row">
  <div class="col-xs-8 col-sm-6">
    <label>Pickup Location</label>
  </div>
  <div class="col-xs-4 col-sm-6">
    <label>{{pickupLocation}}</label>
  </div>
</div>
<hr width="100%" style="margin-top:5px;margin-bottom:5px;"\>
<div class="row">
  <div class="col-xs-8 col-sm-6">
    <label>Dropoff Location</label>
  </div>
  <div class="col-xs-4 col-sm-6">
    <label>{{dropoffLocation}}</label>
  </div>
</div>
<hr width="100%" style="margin-top:5px;margin-bottom:5px;"\>